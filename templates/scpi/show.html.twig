{% extends 'base.html.twig' %}

{% block title %}Scpi
{% endblock %}

{% block body %}
	<h3 class="title">Détails de la Scpi</h3>
	<div class="button-right">
		<a class="btn btn-secondary" href="{{ path('scpi_index') }}">Retour</a>
	</div>

	<table class="table table-hover table-show">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ scpi.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ scpi.nom }}</td>
			</tr>
			<tr>
				<th>Tdvm</th>
				<td>{{ scpi.tdvm }}</td>
			</tr>
			<tr>
				<th>Prix_part</th>
				<td>{{ scpi.prixPart }}</td>
			</tr>
			<tr>
				<th>Capitalisation</th>
				<td>{{ scpi.capitalisation }}</td>
			</tr>
			<tr>
				<th>Taux_occupation</th>
				<td>{{ scpi.tauxOccupation }}</td>
			</tr>
			<tr>
				<th>Valeur_retrait</th>
				<td>{{ scpi.valeurRetrait }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ scpi.DateCreation |date('d-m-Y')  }}</td>
			</tr>

			{% if scpi.AssuranceVie %}
				<th>Assurance vie</th>
				<td>oui</td>
			{% else %}
				<th>Assurance vie</th>
				<td>non</td>
			{% endif %}

		</tbody>
	</table>


	<div class="button-inline">


		{{ include('scpi/_delete_form.html.twig') }}
		<a class="btn btn-dark" href="{{ path('scpi_edit', {'id': scpi.id}) }}">Modifier</a>
	</div>
{% endblock %}
